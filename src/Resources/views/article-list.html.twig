<section class="cms-article-list">
    <form method="get" action="{{ path('cms_articles') }}" class="text-center mb-4">
        <div class="d-flex justify-content-between">
            <div>
                <a class="btn btn-sm btn-primary" href="{{ path('cms_article') }}">Create new article</a>
            </div>
            <div class="row g-3 align-items-center justify-content-end w-75">
                <div class="col-auto w-50">
                    <input type="text" id="cmsArticlesSearch" class="form-control form-control-sm" name="query" value="{{ query }}">
                </div>
                <div class="col-auto">
                    <input class="btn btn-secondary btn-sm" type="submit" value="Search">
                </div>
            </div>
        </div>
    </form>
    <hr />

    <div class="cms-articles">
        {% if articles is empty %}
            <h2 class="text-center"><span class="badge bg-primary">Nothing found</span></h2>
        {% endif %}
        {% for article in articles %}
        <div class="row cms-article">
            <div class="col-8 d-flex flex-column justify-content-between">
                <div>
                    <strong>{{ article.author.name }}</strong>
                    <span class="ms-3">{{ article.createdAt | date }}</span>
                    <a href="{{ path('cms_article', { id: article.id }) }}" title="Edit article">
                        <h2 class="mt-3">{{ article.title | raw }}</h2>
                    </a>
                </div>
                <div class="d-flex justify-content-between">
                    <div>
                        <strong>{{ article.type.name }}</strong>
                        {% if article.tags is not empty %}|{% endif %}
                        {% for tag in article.tags %}
                            <em>{{ tag }}</em>{% if not loop.last %},{% endif %}
                        {% endfor %}
                    </div>
                    <div>
                        Start at: <u>{{ article.startAt | date }}</u>
                        {% if article.endAt %}
                        | End at: <u>{{ article.endAt | date }}</u>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-4">
                {% if article.image %}
                    <img src="{{ asset(article.image, 'articles') }}" />
                {% endif %}
            </div>
        </div>
        <hr />
        {% endfor %}
    </div>

    <nav>
        <ul class="pagination justify-content-center ">
            {% for i in 1..pages %}
                <li class="page-item {% if currentPage == i %}active{% endif %}">
                    {% if currentPage == i %}
                        <span class="page-link">{{ i }}</span>
                    {% else %}
                        <a class="page-link" href="{{ path('cms_articles', { query: query, page: i }) }}">{{ i }}</a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </nav>
</section>