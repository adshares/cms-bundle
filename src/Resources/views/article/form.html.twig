<section class="cms-article-form">
    {{ form_start(form) }}
    <div class="row align-items-start">
        <div class="col-10">
            <div class="row">
                <div class="col-2">
                    {{ form_row(form.type) }}
                </div>
                <div class="col-2">
                    {{ form_row(form.no) }}
                </div>
                <div class="col">
                    {{ form_row(form.startAt) }}
                </div>
                <div class="col">
                    {{ form_row(form.endAt) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(form.title) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(form.name) }}
                </div>
                <div class="col">
                    {{ form_row(form.image) }}
                </div>
            </div>
        </div>
        <div class="col">
            {{ form_row(form.tags) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.content) }}
        </div>
    </div>
    <div class="m-3">
        {{ form_errors(form) }}
    </div>
    <div class="m-3">
        {{ form_row(form.save) }}
    </div>
    {{ form_end(form) }}
</section>